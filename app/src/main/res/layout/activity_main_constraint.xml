<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ConstraintMainActivity">

	<TextView
		android:id="@+id/helloText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello World!"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/iAmButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="i am button"
		app:layout_constraintTop_toTopOf="@+id/helloText"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="@id/iAmNext"
		app:layout_constraintBottom_toBottomOf="parent"
		/>

	<Button
		android:id="@+id/iAmNext"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="next one"
		app:layout_constraintTop_toTopOf="@id/iAmButton"
		app:layout_constraintBottom_toBottomOf="@+id/iAmButton"
		app:layout_constraintLeft_toLeftOf="@+id/iAmButton"
		app:layout_constraintRight_toRightOf="parent"
		/>

</android.support.constraint.ConstraintLayout>
